<div class="container  w-50 d-flex flex-column align-items-center justify-content-center">
    <form class="p-4 p-4 d-flex flex-column gap-4 w-100  align-items-center  detailForm justify-content-center h-auto"
        id="form" action="/host/room/detail" method="post">
        <h2 class="w-100 text-center font-weight-bold">Chia sẻ một số thông tin cơ bản về chỗ ở của bạn </h2>
      
        <div class="d-flex flex-row justify-content-between w-100 p-2 border-bottom "style="height:fit-content;">
            <label class="" for="maxcus">Số lượng khách tối đa </label>
            <div class="value-container">
                <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value">-</div>
                <input type="number" id="number" value="0" name="maximumcus" required class="border-none number" />
                <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value">+</div>
            </div>


        </div>
           
        <div class="d-flex flex-row justify-content-between w-100 p-2 border-bottom"style="height:fit-content;">
            <label class="" for="price">Số lượng giường ngủ </label>
            <div class="value-container">
                <div class="value-button" id="" onclick="decreaseBedValue()" value="Decrease Value">-</div>
                <input type="number" id="bed" value="0" name="bed" required class="border-none number" />
                <div class="value-button" id="" onclick="increaseBedValue()" value="Increase Value">+</div>
            </div>


        </div>
     
        <div class="d-flex flex-row justify-content-between w-100 p-2 border-bottom"style="height:fit-content;">
            <label class="" for="shower">Số lượng phòng tắm </label>
            <div class="value-container">
                <div class="value-button" id="" onclick="decreaseShowerValue()" value="Decrease Value">-</div>
                <input type="number" id="shower" value="0" name="shower" required class="border-none number" />
                <div class="value-button" id="" onclick="increaseShowerValue()" value="Increase Value">+</div>
            </div>


        </div>
             <div class="w-100">
                <label for="address">Địa chỉ :</label>
                <input class="form-control" type="text" id="address" name="address" autocomplete="off" required>

            </div>
    
      
</div>

</form>


</div>

<form action="/host/room" id="backform" method="get" class=" display-none">

</form>
<div style="height: 80px;" class=" w-100 fixed-bottom ">
    <div class="progress w-100" style="height: 3px;">

        <div class="progress-bar" role="progressbar" style="width: {{this.process}}%" aria-valuenow="25"
            aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="d-flex d-flex align-items-center h-75">
        <div class="w-50  d-flex flex-row justify-content-start p-4 mt-1">
            <input class="w-25 btn btn-outline-dark  " id="back" type="submit" value="Quay Lại"></input>
        </div>
        <div class=" w-50   d-flex flex-row justify-content-end p-4 mt-1">
            <input class="btn btn-danger w-25" id="submitbtn" type="submit" value="Bước tiếp theo"></input>
        </div>
    </div>


</div>


<script>

    function increaseValue() {
        var value = parseInt(document.getElementById('number').value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('number').value = value;
    }

    function decreaseValue() {
        var value = parseInt(document.getElementById('number').value, 10);
        value = isNaN(value) ? 0 : value;
        value < 1 ? value = 1 : '';
        value--;
        document.getElementById('number').value = value;
    }

    function increasePriceValue() {
        var value = parseInt(document.getElementById('price').value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('price').value = value;
    }

    function decreasePriceValue() {
        var value = parseInt(document.getElementById('price').value, 10);
        value = isNaN(value) ? 0 : value;
        value < 1 ? value = 1 : '';
        value--;
        document.getElementById('price').value = value;
    }


        function increaseBedValue() {
        var value = parseInt(document.getElementById('bed').value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('bed').value = value;
    }

    function decreaseBedValue() {
        var value = parseInt(document.getElementById('bed').value, 10);
        value = isNaN(value) ? 0 : value;
        value < 1 ? value = 1 : '';
        value--;
        document.getElementById('bed').value = value;
    }
        function increaseShowerValue() {
        var value = parseInt(document.getElementById('shower').value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('shower').value = value;
    }

    function decreaseShowerValue() {
        var value = parseInt(document.getElementById('shower').value, 10);
        value = isNaN(value) ? 0 : value;
        value < 1 ? value = 1 : '';
        value--;
        document.getElementById('shower').value = value;
    }
    $(document).ready(function () {


        var now = new Date();
        var month = (now.getMonth() + 1);
        var day = now.getDate();
        if (month < 10)
            month = "0" + month;
        if (day < 10)
            day = "0" + day;
        var today = now.getFullYear() + '-' + month + '-' + day;
        if ($('#start').val() == "") { $('#start').val(today); }

        var endday = now.getFullYear() + '-' + month + '-' + day;
        if ($('#end').val() == "") { $('#end').val(endday); }
        $("#submitbtn").on("click", function () {
            $("#form").trigger("submit");
        });
        $("#back").on("click", function () {
            $("#backform").trigger("submit");
        });

    });
</script>